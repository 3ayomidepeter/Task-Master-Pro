{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
